{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "es2020", 
    "target": "esnext", 
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}